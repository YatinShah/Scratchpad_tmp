@Digitizing_HostAddress = http://localhost:5216
@Digitizing_Dapr_HostAddress = http://localhost:3506
@dapr_Api_Ver = v1.0
@stateStore = digistore
@configStore = digiconfig
@secretStore = digitizingsecrets
@pubsub = digitizingpubsub
@dapr_local_app_name= digitizer
@dapr_local_api_path = api/Name/Elaborate
@remote_app_base = http://istdapi:5142
